{
  "name": "xhs-download-video",
  "version": "1.0.4",
  "description": "小红书视频下载器",
  "main": "electron/main.cjs",
  "scripts": {
    "start": "concurrently \"npm run dev\" \"npm run electron\"",
    "dev": "vite",
    "electron": "node electron-starter.js",
    "electron-delayed": "node -e \"setTimeout(() => {console.log('Starting Electron...'); require('child_process').exec('electron .')}, 5000)\"",
    "build": "cross-env NODE_ENV=production vite build",
    "electron:build": "electron-builder -p always",
    "postinstall": "electron-builder install-app-deps",
    "postuninstall": "electron-builder install-app-deps",
    "insall-win-chrome": "puppeteer browsers install chrome  --platform  win64",
    "dist": "npm run build && npm run electron:build",
    "dist-mac": "npm run build && cross-env NODE_ENV=production NODE_OPTIONS=--openssl-legacy-provider electron-builder --mac",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "fs-extra": "^11.2.0",
    "node-fetch": "^3.3.1",
    "puppeteer": "^23.3.1",
    "puppeteer-core": "^23.3.1",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.26.1",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.6",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.14",
    "concurrently": "^9.0.0",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.4.0",
    "electron-rebuild": "^3.2.9",
    "postcss": "^8.4.24",
    "tailwindcss": "^3.3.2",
    "vite": "^4.3.9",
    "wait-on": "^8.0.0"
  },
  "build": {
    "appId": "com.zhiwei5921.xhs-download-video",
    "productName": "Xhs-Video-Downloader",
    "copyright": "Copyright © Qian Zhiwei",
    "directories": {
      "output": "release"
    },
    "asar": true,
    "npmRebuild": false,
    "files": [
      "!package-lock.json",
      "!*.map",
      "!**/*.ts",
      "!.eslintrc.js",
      "!.gitignore",
      "!.prettierrc.js",
      "!.stylelintrc.js",
      "!.babelrc.js",
      "!.eslintignore",
      "!.eslintrc.js",
      "!.prettierrc.js",
      "!.stylelintrc.js",
      "!.DS_Store",
      "./dist/**/*",
      "!./design/**/*",
      "!./downloads/**/*",
      "./electron",
      "!*.db",
      "!cookie.json",
      "!./release/**/*",
      "!privateKey.key",
      "!/.github/**/*",
      "!README.md"
    ],
    "extraMetadata": {
      "main": "electron/main.cjs"
    },
    "mac": {
      "identity": "FuJian Liang (7GC459Q68Q)",
      "artifactName": "${productName}-macos-Setup-${version}.${ext}",
      "category": "public.app-category.productivity",
      "target": [
        "dmg"
      ],
      "icon": "icons/Custom-Icon-Design-Happy-Easter-Flower.icns"
    },
    "dmg": {
      "icon": "icons/Custom-Icon-Design-Happy-Easter-Flower.icns",
      "iconSize": 100,
      "contents": [
        {
          "x": 380,
          "y": 280,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 110,
          "y": 280,
          "type": "file"
        }
      ],
      "window": {
        "width": 500,
        "height": 500
      }
    },
    "win": {
      "icon": "icons/Custom-Icon-Design-Happy-Easter-Flower.ico",
      "verifyUpdateCodeSignature": false,
      "target": [
        {
          "target": "nsis",
          "arch": [
            "ia32",
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "artifactName": "${productName}-Win-Setup-${version}.${ext}",
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "icons/Custom-Icon-Design-Happy-Easter-Flower.ico",
      "uninstallerIcon": "icons/Custom-Icon-Design-Happy-Easter-Flower.ico",
      "installerHeaderIcon": "icons/Custom-Icon-Design-Happy-Easter-Flower.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Xhs Video Downloader",
      "include": "build-scripts/installer.nsh"
    },
    "publish": {
      "provider": "github",
      "private": true,
      "owner": "qzw881130",
      "repo": "xhs-download-videos",
      "token": "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"
    }
  },
  "type": "module"
}